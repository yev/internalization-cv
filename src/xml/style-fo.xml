<?xml version="1.0" encoding="ISO-8859-1" ?>
<xsl:stylesheet version="1.0"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:output method="xml" />

	<xsl:template match="/cv">
		<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">
			<fo:layout-master-set>
				<fo:simple-page-master master-name="titreGH"
					page-height="29.7cm" page-width="21cm" margin-top="1cm"
					margin-bottom="1cm" margin-left="1.5cm" margin-right="1.5cm">
					<fo:region-body margin-top="1cm" />
					<fo:region-before extent="3cm" />
					<fo:region-after extent="1.5cm" />
				</fo:simple-page-master>
			</fo:layout-master-set>


			<fo:page-sequence master-reference="titreGH">
				<fo:flow flow-name="xsl-region-body">
					<fo:table>
						<fo:table-column column-width="50%"/>
						<fo:table-column column-width="50%"/>
						<fo:table-body>
							 <fo:table-row>
								<fo:table-cell border-style="solid" border-width="1pt">
									<xsl:for-each select="personalInfo">
										<fo:block><xsl:value-of select="lastName" /> &#160; <xsl:value-of select="middleName" /> &#160; <xsl:value-of select="firstName" /></fo:block>
										<fo:block><xsl:value-of select="address" /></fo:block>
										<fo:block><xsl:value-of select="mobile" /></fo:block>
										<fo:block font-size="8pt"><xsl:value-of select="additionalInfo"/></fo:block>	
									</xsl:for-each>
								</fo:table-cell>
								<fo:table-cell border-style="solid" border-width="1pt">
									<fo:block text-align="right"><!-- fo:external-graphic src="web/Ressources/images/photo.jpg" content-height="0.7in" vertical-align="middle"/ --></fo:block>
								</fo:table-cell>
							</fo:table-row> 
						</fo:table-body>	
					</fo:table>
					<fo:table>
						<fo:table-column column-width="15%"/>
						<fo:table-column column-width="85%"/>
						<fo:table-body>	
							<!-- Summary section -->
							<fo:table-row>
								<fo:table-cell number-columns-spanned="2">
									<fo:block font-weight="bold"><xsl:value-of select="summary/@title"/></fo:block>
								</fo:table-cell>
							</fo:table-row>
							<fo:table-row>
								<fo:table-cell number-columns-spanned="2">
									<fo:block><xsl:value-of select="summary"/></fo:block>
								</fo:table-cell>
							</fo:table-row>
							
							<!-- Education section -->
							<fo:table-row>
								<fo:table-cell number-columns-spanned="2">
									<fo:block font-weight="bold"><xsl:value-of select="education/@title"/></fo:block>
								</fo:table-cell>
							</fo:table-row>
							<xsl:for-each select="education/organisation">
								<fo:table-row><!-- Date -->
									<fo:table-cell>
										<fo:block><xsl:value-of select="date" /></fo:block>
									</fo:table-cell>
									<fo:table-cell><!-- Study description -->
										<fo:block font-weight="bold"><xsl:value-of select="name" /><fo:inline font-weight="normal"> (<xsl:value-of select="geolocalization" />)</fo:inline>  </fo:block>
										<fo:block><xsl:value-of select="speciality" />&#160; <xsl:value-of select="desc" /> </fo:block>
									</fo:table-cell>
								</fo:table-row>	
							</xsl:for-each>
							
						</fo:table-body>
					</fo:table>
				</fo:flow>
			</fo:page-sequence>
		</fo:root>
	</xsl:template>
</xsl:stylesheet>
